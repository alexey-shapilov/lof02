ul.b-menu
    - var activeElement = 1
    each element, index in ['Мобильные телефоны', 'Планшеты', 'Mp3 плееры', 'Персональные компьютеры', 'Ноутбуки', 'Apple TV', 'Аксессуары']
        li(class=index == activeElement ? 'b-menu__element b-menu__element_active' : 'b-menu__element')
            .b-menu__element-tail
            .b-menu__element-text= element
            .b-menu__element-arrow
                .b-menu__element-arrow__border
                .b-menu__element-arrow__main
